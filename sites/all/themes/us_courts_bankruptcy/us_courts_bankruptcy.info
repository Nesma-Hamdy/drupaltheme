; US Courts Bankruptcy .info file
; Theme dependant on OHO Basic

base theme = oho_basic

name = US Courts Bankruptcy
description = US Courts Bankruptcy Theme
version = 1.0
core = 7.x
screenshot = theme-screenshot.png

; Theme settings
; -------------------------
; Default theme settings

settings[pacer_link] = https://pcl.uscourts.gov/search
settings[cmecf_link] = http://www.pacer.gov/psco/cgi-bin/links.pl
settings[default_welcome_img] = 1
settings[toggle_seal] = 1
settings[default_seal_img] = 1
settings[toggle_welcome_img] = 1
settings[welcome_txt] = <h2><span class="fp-welcome-title">Welcome</span></h2><p>Welcome to the official website for the United States Bankruptcy Court for the XXXX District of XXXXXXXXX. We have offices in XXXX, XXXX, and XXXX.</p><p class="fp-welcome-link"><a href="#">Hours and directions &raquo;</a></p>
settings[court_title] = United States Bankruptcy Court

; Regions
; -------------------------
; Content, help, page_top, and page_bottom are mandatory

regions[header] = Header
regions[sidebar_first] = Left sidebar
regions[content_top] = Content Top
regions[content] = Content
regions[content_bottom] = Content Bottom
regions[sidebar_second] = Right sidebar
regions[footer] = Footer
regions[help] = Help
regions[page_top] = Page top
regions[page_bottom] = Page bottom
regions[highlighted] = Highlighted
regions[sub_content_left] = Left Sub Content Column
regions[sub_content_center] = Center Sub Content Column
regions[sub_content_right] = Right Sub Content Column

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links

; disabled features, uncomment to activate
; features[] = secondary_links

stylesheets[all][] = css/visual-editor.css
stylesheets[all][] = css/main.css
